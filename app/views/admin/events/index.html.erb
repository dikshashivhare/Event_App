<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Venue</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Cover image</th>
      <th>Event organizer</th>
      <th>Event category</th>
      <th>Is featured</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.city %></td>
        <td><%= event.state %></td>
        <td><%= event.country %></td>
        <td><%= event.venue %></td>
        <td><%= event.latitude %></td>
        <td><%= event.longitude %></td>
        <td><%= event.cover_image %></td>
        <td><%= event.event_organizer %></td>
        <td><%= event.event_category %></td>
        <td><%= event.is_featured %></td>
        <td><%= event.slug %></td>
        <p><% event.tag_list.each do |tag| %>
          <%= link_to tag, tagged_path(tag: tag) %>
          <% end %></p>
        <td><%= link_to 'Show', admin_event_path %></td>
        <td><%= link_to 'Edit', edit_admin_event_path(event) %></td>
        <td><%= link_to 'Destroy', admin_event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

